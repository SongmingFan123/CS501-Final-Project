<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center">

        <ImageView
            android:src="@drawable/device_connect"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/connect_select_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_select_item_unknown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/connect_select_list_item_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_select_item_last"
                android:textAlignment="textEnd"
                android:layout_marginEnd="5dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/connect_select_list_item_settings"
            android:src="@drawable/device_connect_info"
            android:layout_marginEnd="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>